    <sch:schema xmlns:sch="http://purl.oclc.org/dsdl/schematron">
      <sch:pattern>
        <sch:rule context="root">
          <sch:assert test="false()"/>
        </sch:rule>
      </sch:pattern>
    </sch:schema>
  </schemas>
  <documents>
    <document filename="document.xml">
      <root xmlns="">
        <!-- Comment -->
        <child/>
      </root>
    </document>
    <document filename="subdir/document.xml">
      <root/>
    </document>
  </documents>
  <parameters>
    <parameter name="foo" value="bar"/>
  </parameters>
  <assertions xmlns:svrl="http://purl.oclc.org/dsdl/svrl">
    <assertion assert="/svrl:schematron-output"/>
  </assertions>
</testcase>
